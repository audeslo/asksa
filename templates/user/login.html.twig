{% extends 'user/layout.html.twig' %}

{% block content %}
    <link
            rel="stylesheet"
            href="https://fonts.googleapis.com/css?family=Roboto:400,700"
    />
    <!-- https://fonts.google.com/specimen/Open+Sans -->
    <link rel="stylesheet" href="{{ asset('templates/css/fontawesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('templates/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('templates/css/templatemo-style.css') }}">
    <link rel="stylesheet" href="{{ asset('templates/css/test.css') }}">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <br>
    <br>
    <br>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Sign In</h3>
                    <div class="d-flex justify-content-end social_icon">
                        <span><i class="fab fa-facebook-square"></i></span>
                        <span><i class="fab fa-google-plus-square"></i></span>
                        <span><i class="fab fa-twitter-square"></i></span>

                    </div>
                </div>
                <div class="card-body">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <form action="{{ path("app_login") }}" method="post">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            {# <label for="username" class="form-label">Login</label>#}
                            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="username" class="form-control"/>

                            {# <input type="text" class="form-control" placeholder="username">#}

                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" id="password" name="_password" required="required"  placeholder="password" class="form-control" />
                            {# <input type="password" class="form-control" placeholder="password">#}
                        </div>
                        <div class="row align-items-center remember">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />Remember Me
                            {# <input type="checkbox">Remember Me#}
                        </div>
                        <div class="form-group">
                            {#  <input type="submit" value="Login" class="btn float-right login_btn">#}
                            <input type="submit" id="_submit" name="_submit" value="Valider" class="btn float-right login_btn"/>
                            {# <input type="submit" id="_submit" name="_submit" value="Connexion" class="btn btn-success"/>#}
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                        Don't have an account?<a href="#">Sign Up</a>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a href="#">Forgot your password? </a>
                    </div>
                </div>
            </div>
        </div>
    </div>




