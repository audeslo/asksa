<a type="button" class="btn  btn-danger" data-toggle="modal" data-target="#{{ article.slug }}">
    <i class="glyphicon glyphicon-trash"></i>
    Supprimer
</a>

<!-- Modal -->
<div class="modal fade " id="{{ article.slug}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="color: #000000">
    <div class="modal-dialog modal-lg" role="document"  >
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Suppression article</h4>
            </div>
            <div class="modal-body">
                <h2>Supprimer un Article </h2>

                    <h4> Etes-vous certain de vouloir supprimer l'article " <em class="green">{{ article.libelle }}</em>" ? </h4>

                <form method="post" action="{{ path('article_delete', {'slug': article.slug}) }}" {#onsubmit="return confirm('Are you sure you want to delete this item?');"#}>
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                    <button class="btn btn-danger">Supprimer</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>