
{% extends 'client/client.html.twig' %}

{% block content %}
<div class="col-lg-10">
    <h1>Détail Client</h1>
    <div class="row">
        <div class="col-xs-6 col-md-3 col-md-offset-9">
            <img width="80%" height="80%" src="{{ asset('uploads/images/clients/'~client.id~'.'~client.url) }}" alt="{{ client.slug }}" class="img-circle">
        </div>
    </div>

    <table class="table-bordered table">
        <tbody>
        <tr>
            <th>N°</th>
            <td>{{ client.id }}</td>
        </tr>
        <tr>
            <th>Réferent</th>
            <td>{{ client.referent }}</td>
        </tr>
        <tr>
            <th>Nom complet</th>
            <td>{{ client.nom }}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>
                {{ client.type }}

            </td>
        </tr>

        <tr>
            <th>Téléphone</th>
            <td>{{ client.telephone }}</td>
        </tr>
        <tr>
            <th>Adresse</th>
            <td>{{ client.adresserue }}</td>
        </tr>
        <tr>
            <th>E-mail</th>
            <td>{{ client.mail }}</td>
        </tr>


        <tr>
            <th>Enregistré par </th>
            <td>
                {{ client.createdBy }}<br> le
                {{ client.createdOn ? client.createdOn |date('d-m-Y H:i:s') : ''  }}
            </td>
        </tr>
        <tr>
            <th>Modifié par </th>
            <td>
                {{ client.editedBy }} <br>le
                {{ client.editedOn ? client.editedOn |date('d/m/Y H:i:s') : '' }}
            </td>
        </tr>
        </tbody>
    </table>
    <div class="row">
        <a class="btn btn-default col-md-3" href="{{ path('client_index') }}">
            <i class="fa fa-chevron-left"></i>
            Retour à la liste

        </a>


        <a class="btn btn-primary col-md-2 offset-6" href="{{ path('client_edit', { 'slug': client.slug }) }}">
            <i class="fa fa-pencil"></i>
            Modifier
        </a>
    </div>
</div>

{% endblock %}












