{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <h1>Client index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Referent</th>
                <th>Nomcomplet</th>
                <th>Adresserue</th>
                <th>Type</th>
                <th>Telephone</th>
                <th>Ville</th>
                <th>Codepostal</th>
                <th>Mail</th>
                <th>Slug</th>
                <th>CreatedOn</th>
                <th>EditedOn</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.referent }}</td>
                <td>{{ client.nomcomplet }}</td>
                <td>{{ client.adresserue }}</td>
                <td>{{ client.type }}</td>
                <td>{{ client.telephone }}</td>
                <td>{{ client.ville }}</td>
                <td>{{ client.codepostal }}</td>
                <td>{{ client.mail }}</td>
                <td>{{ client.slug }}</td>
                <td>{{ client.createdOn ? client.createdOn|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ client.editedOn ? client.editedOn|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('client_show', {'id': client.id}) }}">show</a>
                    <a href="{{ path('client_edit', {'id': client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('client_new') }}">Create new</a>
{% endblock %}
