{% extends 'tarifcategorieclt/tarifcategorieclt.html.twig' %}

{% block content %}

    {#{% block body %}#}
    <div class="col-lg-10">

        <h1>Detail categorie</h1>

        <table class="table-bordered table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tarifcategorieclt.categorie }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ tarifcategorieclt.produit }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ tarifcategorieclt.montant }}</td>
            </tr>

            <tr>
                <th>Borne supérieure</th>
                <td>{{ tarifcategorieclt.bornesupperieur }}</td>
            </tr>
            <tr>
                <th>Observation</th>
                <td>{{ tarifcategorieclt.observation }}</td>
            </tr>

            <tr>
                <th>Borne inférieure</th>
                <td>{{ tarifcategorieclt.borneinferieure }}</td>
            </tr>

            </tbody>
        </table>

        <div class="row">
            <a class="btn btn-default col-md-3" href="{{ path('tarifcategorieclt_index') }}">
                <i class="fa fa-chevron-left"></i>
                Retour à la liste
            </a>


            <a class="btn btn-primary col-md-2 offset-6" href="{{ path('tarifcategorieclt_edit', { 'id': tarifcategorieclt.id }) }}">
                <i class="fa fa-pencil"></i>
                Modifier
            </a>

        </div>
    </div>
{% endblock %}
