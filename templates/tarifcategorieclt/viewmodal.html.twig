<a style="cursor: pointer"  data-toggle="modal" data-target="#{{ tarifcategorieclt.slug }}">
    <i style="font-size: 20px" class="fa fa-eye "></i>
</a>

<!-- Modal -->
<div class="modal fade " id="{{ tarifcategorieclt.slug}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="color: #000000">
    <div class="modal-dialog modal-lg" role="document"  >
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Détails categorie</h4>
            </div>
            <div class="modal-body">
                <table class="table-bordered table" style="background-color: #868e96">
                    <tbody>

                    <tr>
                        <th>Catégorie</th>
                        <td>{{ tarifcategorieclt.categorie }}</td>
                    </tr>
                    <tr>
                        <th>Produit</th>
                        <td>{{ tarifcategorieclt.produit }}</td>
                    </tr>
                    <tr>
                        <th>Intervalle</th>
                        <td> De {{tarifcategorieclt.borneinferieure }} À {{tarifcategorieclt.bornesupperieur }}</td>
                    </tr>
                    <tr>
                        <th>Capacité</th>
                        <td>{{ tarifcategorieclt.capacite.code }}</td>
                    </tr>

                    <tr>
                        <th>Montant</th>
                        <td>{{ tarifcategorieclt.montant }}</td>
                    </tr>
                    </tbody>
                </table>
                <div class="row" >
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        <i class="fa fa-chevron-left"></i>
                        Retour à la liste
                    </button>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                <button type="button" class="btn btn-primary">Imprimer</button>
            </div>
        </div>
    </div>
</div>