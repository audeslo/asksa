{% extends 'tarifcategorieclt/tarifcategorieclt.html.twig' %}

{% block content %}

    <div class="card mb-3">
        <div class="card-header">
            <h2>
                <i class="fa fa-table" ></i>
                Liste des tarifs des clients</h2></div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-2">
                    <a href="{{ path('tarifcategorieclt_new') }}" class="btn btn-primary ">
                        <i class="fa fa-chevron-right"></i>
                        Nouveau
                    </a>
                </div>

                <div class="offset-8 col-md-2 ">
                    {#                col-md-offset-4 col-md-2#}
                    <a href="#" class="btn btn-success ">
                        <i class="fa fa-print"></i>
                        Imprimer
                    </a>
                </div>
            </div>
            <hr>

            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    {# <th>Id</th>#}
                    <th>Catégorie</th>
                    <th>Désignation</th>
                    <th>Intervalle</th>
                    <th>Capacité</th>
                    <th>Montant</th>

                {% for tarifcategorieclt in tarifcategorieclts %}
                    <tr>

                        <td>{{ tarifcategorieclt.categorie }}</td>
                        <td>{{ tarifcategorieclt.produit.designation }}</td>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                        <td>De {{ tarifcategorieclt.borneinferieure | number_format(0,0,' ')}} À
                            {{ tarifcategorieclt.bornesupperieur | number_format(0,0,' ')}}</td>
                        <td>{{ tarifcategorieclt.capacite.code }}</td>
                        <td>{{ tarifcategorieclt.montant | number_format(0,0,' ')}}</td>


                        <td>
                            {% include('tarifcategorieclt/viewmodal.html.twig') %}
                        </td>
                        <td>
                            <a class="" href="{{ path('tarifcategorieclt_show', {'id': tarifcategorieclt.id}) }}">
                                <i class="fa fa-edit tm-product-delete-icon"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}
