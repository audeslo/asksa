{% extends 'vente/vente.html.twig' %}

{# page tableau et recherche #}

{% block content %}

    <div class="card mb-3">
        <div class="card-header">
            <h2>
                <i class="fa fa-table" ></i>
                Liste des ventes</h2></div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-2">
                    <a href="{{ path('vente_new') }}" class="btn btn-primary ">
                        <i class="fa fa-chevron-right"></i>
                        Nouvelle
                    </a>
                </div>

                <div class="offset-8 col-md-2 ">
                    <a href="#" class="btn btn-success ">
                        <i class="fa fa-print"></i>
                        Imprimer
                    </a>
                </div>
            </div>
            <hr>

            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                <thead>
                <tr>
                    <th>Référence</th>
                    <th>Date de vente</th>
                    <th>Client</th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for vente in ventes %}
                    <tr>
                        <td> {{ vente.datevente ? vente.datevente | date('d-M-Y') : ''}}</td>
                        <td><a  href="{{ path('', {'slug' : vente.slug}) }}">{{ vente.reference }}</a></td>
                        <td>{{ vente.client }}</td>

                        <td>
                            {% include('vente/viewmodal.html.twig') %}
                        </td>
                        <td>
                            <a  class="" href="{{ path('vente_show', {'slug': vente.slug}) }}">
                                <i class="fa fa-edit tm-product-delete-icon"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="card-footer small text-muted">Hier à 11:59 </div>

{% endblock %}
