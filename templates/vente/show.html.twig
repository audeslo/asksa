{% extends 'vente/vente.html.twig' %}

{% block content %}

    {#{% block body %}#}
    <div class="col-lg-10">

        <h1>Detail commande</h1>

        <table class="table-bordered table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vente.id }}</td>
            </tr>
            <tr>
                <th>Intitule</th>
                <td>{{ vente.reference}}</td>
            </tr>

            <tr>
                <th>Type de magasin</th>
                <td>{{ vente.client }}</td>
            </tr>

            <tr>
                <th>Date de commande</th>
                <td>{{ vente.datevente }}</td>
            </tr>



            <tr>
                <th>CreatedOn</th>
                <td>{{ vente.createdOn ? vente.creditedOn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EditedOn</th>
                <td>{{ vente.editedOn ? vente.editedOn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <div class="row">
            <a class="btn btn-default col-md-3" href="{{ path('vente_index') }}">
                <i class="fa fa-chevron-left"></i>
                Retour Ã  la liste
            </a>


            <a class="btn btn-primary col-md-2 offset-6" href="{{ path('vente_edit', { 'slug': vente.slug }) }}">
                <i class="fa fa-pencil"></i>
                Modifier
            </a>

        </div>
    </div>
{% endblock %}
