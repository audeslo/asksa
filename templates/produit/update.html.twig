                            {{ form_row(form.ville) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.adresse) }}
                            {{ form_row(form.codePostal) }}
                            {{ form_row(form.telephone) }}
                        </div>
                    </div>
                    <button class="btn btn-warning" type="submit"><i class="fas fa-circle"> </i> Mettre Ã  jour</button>
                    <button class="btn btn-primary float-right" type="reset"><i class="fas fa-cut"> </i> Annuler</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
