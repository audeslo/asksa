{% extends 'produit/produit.html.twig' %}

{# page tableau et recherche #}

{% block content %}

    <div class="card mb-3">
        <div class="card-header">
            <h2>
                <i class="fa fa-table" ></i>
                Liste des categories</h2></div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-2">
                    <a href="{{ path('produit_new') }}" class="btn btn-primary ">
                        <i class="fa fa-chevron-right"></i>
                        Nouveau
                    </a>
                </div>

                <div class="offset-8 col-md-2 ">
                    <a href="#" class="btn btn-success ">
                        <i class="fa fa-print"></i>
                        Imprimer
                    </a>
                </div>
            </div>
            <hr>

            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                <thead>
                <tr>

                    <th>Reference</th>
                    <th>désignation</th>
                    <th>Prix unitaire</th>
                    <th>Prix conseiller</th>
                    <th>catégorie</th>
                    <th>Marque</th>

                    <th></th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for produit in produits %}
                    <tr>

                        <td> {{produit.designation }}</a></td>

                        <td>{{ produit.prixU }}</td>

                        <td>{{ produit.prixventeconseiller }}</td>

                        <td> {{produit.categprod}}</a></td>

                        <td>{{ produit.marque }}</td>

                        <td>
                              {% include('produit/viewmodal.html.twig') %}
                        </td>
                        <td>
                            <a  class="" href="{{ path('produit_show', {'slug': produit.slug}) }}">
                                <i class="fa fa-edit tm-product-delete-icon"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="card-footer small text-muted">Hier à 11:59 </div>

{% endblock %}
