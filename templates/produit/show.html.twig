{% extends 'produit/produit.html.twig' %}

{% block content %}

    {#{% block body %}#}
    <div class="col-lg-10">

        <h1>Detail produit</h1>

        <table class="table-bordered table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>


            <tr>
                <th>Référence</th>
                <td>{{ produit.reference }}</td>
            </tr>



            <tr>
                <th>Désignation</th>
                <td>{{ produit.designation }}</td>
            </tr>

            <tr>
                <th>Prix unitaire</th>
                <td>{{ produit.prixU }}</td>
            </tr>

            <tr>
                <th>Prix conseiller</th>
                <td>{{ produit.prixventeconseiller }}</td>
            </tr>

         {#   <tr>
                <th>Categorie</th>
                <td>{{ produit.categprod}}</td>
            </tr>#}

            <tr>
                <th>Alerte</th>
                <td>{{ produit.stockalerte }}</td>
            </tr>

            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>


            <tr>
                <th>CreatedOn</th>
                <td>{{ produit.createdOn ? produit.createdOn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EditedOn</th>
                <td>{{ produit.editedOn ? produit.editedOn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <div class="row">
            <a class="btn btn-default col-md-3" href="{{ path('produit_index') }}">
                <i class="fa fa-chevron-left"></i>
                Retour à la liste
            </a>


            <a class="btn btn-primary col-md-2 offset-6" href="{{ path('produit_edit', { 'slug': produit.slug }) }}">
                <i class="fa fa-pencil"></i>
                Modifier
            </a>

        </div>
    </div>
{% endblock %}
