
{% extends 'venteshowroom/venteshowroom.html.twig' %}

{% block content %}
    {# bouton new #}
    <div class="col-md-10" style="background-color: #cccccc">
        <h1> Gestion de vente</h1>

        {{ form_start(form) }}


        {{ include('venteshowroom/_form.html.twig') }}

<br>
        {{ form_end(form) }}
        <div class="col-md-2 offset-10">
            <button id="add" class="btn btn-success add vente">Ajouter
                <i class="fa fa-long-arrow-alt-down"></i></button>

        </div>
           <div class="row">
               <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                   <thead>
                   <tr>
                       <th width="25%">Désignations</th>
                       <th width="16%">Qté acheté</th>
                       <th width="16%">Qté carton</th>
                       <th width="16%">Capacité bidon</th>
                       <th width="16%">Prix vente</th>
                       <th width="5%">Supp</th>
                   </tr>
                   </thead>
               </table>

               </div>
        <hr>
        <div class="row">
            <div class="col-md-2">
                <a href="{{ path('venteshowroom_index') }}" class="btn btn-default">
                    <i class="fa fa-chevron-left"></i>
                    Retour à la Liste
                </a>
            </div>
            <div class="col-md-2 offset-8">
                <button class="btn btn-primary Encaisser">{{ button_label|default('Encaisser') }}</button>

            </div>

        </div>
        <hr>
    </div>

    <script>

        const add = document.getElementById('add');

        if (add){

           add.addEventListener('click', e => {
               if (e.target.className === "btn btn-success add vente"){
                   //fetch('/venteshowroom/new')
                   form = document.getElementsByName("venteshowroom");
                   $.ajax({
                       url:"/venteshowroom/new",
                       method:"POST",
                       data:$(form).serialize(),
                       success:function (data) {
                           alert("salut");

                       },

                   }).then(res => window.location.reload());
               }
           })
        }

    </script>



{% endblock %}

