
{% extends 'venteshowroom/venteshowroom.html.twig' %}

{% block content %}
    {# bouton new #}
    <div class="col-md-10" style="background-color: #cccccc">
        <h1> Create new Fournisseur</h1>

        {{ form_start(form) }}


        {{ include('venteshowroom/_form.html.twig') }}
<br>
        <div class="col-md-2 offset-10">
            <button class="btn btn-success">{{ button_label|default('Ajouter') }}</button>
            {{ form_end(form) }}
        </div>
        <hr>
           <div class="row">
               <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                   <thead>
                   <tr>
                       <th width="25%">Désignations</th>
                       <th width="16%">Quantité acheté</th>
                       <th width="16%">Quantité carton</th>
                       <th width="16%">Capacité bidon</th>
                       <th width="16%">Prix vente</th>
                       <th width="5%">Supp</th>
                   </tr>
                   </thead>
               </table>

               </div>
        <hr>
        <div class="row">
            <div class="col-md-2">
                <a href="{{ path('venteshowroom_index') }}" class="btn btn-default">
                    <i class="fa fa-chevron-left"></i>
                    Retour à la Liste
                </a>
            </div>
            <div class="col-md-2 offset-8">
                <button class="btn btn-primary">{{ button_label|default('Valider') }}</button>
                {{ form_end(form) }}
            </div>

        </div>
        <hr>
    </div>

{% endblock %}

