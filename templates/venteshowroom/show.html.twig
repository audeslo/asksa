{% extends 'venteshowroom/venteshowroom.html.twig' %}

{% block content %}

{#{% block body %}#}
<div class="col-lg-10">

    <h1>Detail de la vente</h1>

    <table class="table-bordered table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ venteshowroom.id }}</td>
            </tr>

            <tr>
                <th>Date de vente</th>
                <td>{{ venteshowroom.datevente }}</td>
            </tr>

            <tr>
                <th>Référence</th>
                <td>{{ venteshowroom.reference }}</td>
            </tr>
            <tr>
                <th>Nom du client/struture</th>
                <td>{{ venteshowroom.client }}</td>
            </tr>


            <tr>
                <th>CreatedOn</th>
                <td>{{ venteshowroom.createdOn ? venteshowroom.createdOn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EditedOn</th>
                <td>{{ venteshowroom.editedOn ? venteshowroom.editedOn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <a class="btn btn-default col-md-3" href="{{ path('venteshowroom_index') }}">
            <i class="fa fa-chevron-left"></i>
            Retour
        </a>


        <a class="btn btn-primary col-md-2 offset-6" href="{{ path('venteshowroom_edit', { 'slug': venteshowroom.slug }) }}">
            <i class="fa fa-pencil"></i>
            Modifier
        </a>

    </div>
</div>
{% endblock %}
