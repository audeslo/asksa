
{% extends 'venteshowroom/venteshowroom.html.twig' %}

{% block content %}
    <div class="col-md-10" style="background-color: #cccccc">
        <h1> Gestion de vente</h1>

        {{ form_start(form) }}


        <div id="div1">

            <div class="row">

                <div class="col-md-5 ">
                    {% if(form.grosdetail is defined) %}
                        {{ form_label(form.grosdetail) }}
                        {{ form_widget(form.grosdetail) }}
                        {{ form_errors(form.grosdetail) }}
                    {% endif %}
                </div>

                <div class="col-md-5 offset-2">
                    {% if (form.modereglement is defined) %}
                        {{ form_label(form.modereglement) }}
                        {{ form_widget(form.modereglement) }}
                        {{ form_errors(form.modereglement) }}
                    {% endif %}


                </div>
            </div>

        </div>
        <hr>
        <div class="row">

            <div class="col-md-5 ">

                {{ form_label(form.produit) }}
                {{ form_widget(form.produit) }}
                {{ form_errors(form.produit) }}

                {{ form_label(form.quantite) }}
                {{ form_widget(form.quantite) }}
                {{ form_errors(form.quantite) }}

            </div>

            <div class="col-md-5 offset-2">

                {{ form_label(form.capacite) }}
                {{ form_widget(form.capacite) }}
                {{ form_errors(form.capacite) }}
            </div>
        </div>

<br>

        <div class="col-md-2 offset-10">
            <button id="add" class="btn btn-success add vente">Ajouter
                <i class="fa fa-long-arrow-alt-down"></i></button>
            {{ form_end(form) }}
        </div>
           <div class="row">
               <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                   <thead>
                   <tr>
                       <th width="25%">Désignations</th>
                       <th width="16%">Qté acheté</th>
                       <th width="16%">Contenant</th>
                       <th width="16%">Capacité</th>
                       <th width="16%">Prix vente</th>
                       <th width="5%">Supp</th>
                   </tr>
                   </thead>
                   {% for vente in ventes %}
                       <tr>
                           <th> {{ vente.produit}} </th>
                           <th>{{ vente.quantite }}</th>
                           <th>{{ vente.contenant ? 'Carton' : 'Bidon' }}</th>
                           <th>{{ vente.capacite.code}}</th>
                           <th>{{ vente.prixvente}}</th>
                           <th>

                               <a  href="#" >
                                   <i class="fa fa-trash" aria-hidden="true"></i>
                               </a>
                           </th>

                       </tr>
                   {% endfor %}
               </table>

               </div>
        <hr>
        <div class="row">
            <div class="col-md-2">
                <a href="{{ path('venteshowroom_index') }}" class="btn btn-default">
                    <i class="fa fa-chevron-left"></i>
                    Retour à la Liste
                </a>
            </div>
            <div class="col-md-2 offset-2">
                <a href="{{ path('venteshowroom_liste') }}" class="btn btn-success ">
                    <i class="fa fa-print"></i>
                    Imprimer
                </a>

            </div>

            <div class="col-md-2 offset-4">
                <button class="btn btn-primary Encaisser">{{ button_label|default('Encaisser') }}</button>

            </div>

        </div>
        <hr>
    </div>

