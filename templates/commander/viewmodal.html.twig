<a style="cursor: pointer"  data-toggle="modal" data-target="#{{ commander.id }}">
    <i style="font-size: 20px" class="fa fa-eye "></i>
</a>

<!-- Modal -->
<div class="modal fade " id="{{ commander.id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="color: #000000">
    <div class="modal-dialog modal-lg" role="document"  >
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Détails produit</h4>
            </div>
            <div class="modal-body">
                <table class="table-bordered table" style="background-color: #868e96">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ commander.id }}</td>
                    </tr>
                    <tr>
                        <th>commande</th>
                        <td>{{ commander.commande }}</td>
                    </tr>
                    <tr>
                        <th>Produit</th>
                        <td>{{ commander.produit }}</td>
                    </tr>

                    <tr>
                        <th>capacite</th>
                        <td>{{ commander.capacite }}</td>
                    </tr>

                    <tr>
                        <th>code bar carton</th>
                        <td>{{ commander.codebarecaton }}</td>
                    </tr>

                    <tr>
                        <th>code bar produit</th>
                        <td>{{ commander.codebareproduit }}</td>
                    </tr>

                    <tr>
                        <th>Capacite carton</th>
                        <td>{{ commander.capacitecarton}}</td>
                    </tr>


                    </tbody>
                </table>
                <div class="row" >
                    <button type="button" class="btn btn-info" data-dismiss="modal">
                        <i class="fa fa-chevron-left"></i>
                        Retour à la liste
                    </button>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                <button type="button" class="btn btn-primary">Imprimer</button>
            </div>
        </div>
    </div>
</div>