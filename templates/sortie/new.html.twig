{% extends 'sortie/sortie.html.twig' %}

{% block content %}
    <div class="col-md-10" style="background-color: #cccccc">
        <h1> Ajout d'un nouveau produit à commander</h1>
        <hr>
        {{ form_start(form) }}

       {{ include('sortie/_form.html.twig') }}
        <hr>
        <div class="row">
            <div class="col-md-2">
                <a href="{{ path('sortie_index', {'slug' : vente.slug}) }}" class="btn btn-default">
                    <i class="fa fa-chevron-left"></i>
                    Retour à la Liste
                </a>
            </div>
            <div class="col-md-2 offset-7">
                <button class="btn btn-primary">{{ button_label|default('Ajouter') }}</button>
                {{ form_end(form) }}
            </div>

        </div>
        <hr>
    </div>

{% endblock %}
