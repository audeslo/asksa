{% extends 'modereglement/modereglement.html.twig' %}

{% block content %}

    {#{% block body %}#}
    <div class="col-lg-10">

        <h1>Détail catégorie</h1>

        <table class="table-bordered table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ modereglement.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ modereglement.libelle }}</td>
            </tr>

            <tr>
                <th>CreatedOn</th>
                <td>{{ modereglement.createdOn ? modereglement.createdOn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EditedOn</th>
                <td>{{ modereglement.editedOn ? modereglement.editedOn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <div class="row">
            <a class="btn btn-default col-md-3" href="{{ path('modereglement_index') }}">
                <i class="fa fa-chevron-left"></i>
                Retour à la liste
            </a>


            <a class="btn btn-primary col-md-2 offset-6" href="{{ path('modereglement_edit', { 'slug': modereglement.slug }) }}">
                <i class="fa fa-pencil"></i>
                Modifier
            </a>

        </div>
    </div>
{% endblock %}
