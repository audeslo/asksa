{% extends 'commande/commande.html.twig' %}

{% block content %}

    {#{% block body %}#}
    <div class="col-lg-10">

        <h1>Detail commande</h1>

        <table class="table-bordered table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commande.id }}</td>
            </tr>
            <tr>
                <th>Intitule</th>
                <td>{{ commande.intitule }}</td>
            </tr>
            <tr>
                <th>Fournisseur</th>
                <td>{{ commande.fournisseur }}</td>
            </tr>

            <tr>
                <th>Date de commande</th>
                <td>{{ commande.datecommande |date('d-m-Y ')}}</td>
            </tr>

            <tr>
                <th>Description</th>
                <td>{{ commande.description }}</td>
            </tr>

            <tr>
                <th>CreatedOn</th>
                <td>{{ commande.createdOn ? commande.createdOn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EditedOn</th>
                <td>{{ commande.editedOn ? commande.editedOn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <div class="row">
            <a class="btn btn-info col-md-3" href="{{ path('commande_index') }}">
                <i class="fa fa-chevron-left"></i>
                Retour Ã  la liste
            </a>


            <a class="btn btn-primary col-md-2 offset-7" href="{{ path('commande_edit', { 'slug': commande.slug }) }}">
                <i class="fa fa-pencil"></i>
                Modifier
            </a>

        </div>
    </div>
{% endblock %}
