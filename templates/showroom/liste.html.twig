{# page tableau et recherche #}

    <!-- Grâce aux options définies dans le contrôleur on peut insérer des
      images à partir de leur url absolue -->
<img src="{{ asset('templates/img/Ask.jpg') }}" alt="">

    <div class="card mb-3">
        <div class="card-header">
            <h2 align="center">
                <i class="fa fa-table" ></i>
                Liste des showrooms</h2></div>
        Imprimé le :
        <br>
        Par : <b> {{ app.user.nom ~  '  ' ~  app.user.prenom | upper}}</b>

        <br> <br>
        <table class="content">
            <thead>
            <tr>
                <th class="text-center" style="...">Référence</th>
                <th class="text-center" style="...">Showrooms</th>
                <th class="text-center" style="...">Quartier</th>
                <th class="text-center" style="...">Telephone</th>
                <th class="text-center" style="...">Representant</th>
                <th class="text-center" style="...">telephone</th>
            </tr>
            </thead>
            <tbody>
            {% for showroom in showrooms %}
                <tr>
                    <td class="text-center">{{showroom.code }}</td>
                    <td class="text-center">{{ showroom.nomshow }}</td>
                    <td class="text-center">{{ showroom.quartier}}</td>
                    <td class="text-center">{{ showroom.telephone}}</td>
                    <td class="text-center">{{ showroom.representant}}</td>
                    <td class="text-center">{{ showroom.tel}}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>