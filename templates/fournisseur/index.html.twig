    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomcourt</th>
                <th>Nomcomplet</th>
                <th>Representant</th>
                <th>Adresserue</th>
                <th>Telephone</th>
                <th>Ville</th>
                <th>Pays</th>
                <th>Codepostal</th>
                <th>Mail</th>
                <th>Slug</th>
                <th>CreatedOn</th>
                <th>EditedOn</th>
                <th>actions</th>
            </tr>
