                <td>{{ fournisseur.id }}</td>
                <td>{{ fournisseur.nomcourt }}</td>
                <td>{{ fournisseur.nomcomplet }}</td>
                <td>{{ fournisseur.representant }}</td>
                <td>{{ fournisseur.Adresserue }}</td>
                <td>{{ fournisseur.telephone }}</td>
                <td>{{ fournisseur.Ville }}</td>
                <td>{{ fournisseur.Pays }}</td>
                <td>{{ fournisseur.Codepostal }}</td>
                <td>{{ fournisseur.Mail }}</td>
                <td>{{ fournisseur.slug }}</td>
                <td>{{ fournisseur.createdOn ? fournisseur.createdOn|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ fournisseur.editedOn ? fournisseur.editedOn|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('fournisseur_show', {'id': fournisseur.id}) }}">show</a>
                    <a href="{{ path('fournisseur_edit', {'id': fournisseur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('fournisseur_new') }}">Create new</a>
